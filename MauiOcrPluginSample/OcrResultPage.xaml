<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiOcrPluginSample.OcrResultPage"
             Title="Resultado OCR">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Imagen capturada -->
            <Image x:Name="capturedImage"
                   Aspect="AspectFit"
                   HeightRequest="300"/>

            <!-- Modal de formato decimal -->
            <Grid ColumnDefinitions="Auto,*" 
                  ColumnSpacing="10"
                  VerticalOptions="Center">
                <Label Text="Formato decimal:"
                       VerticalOptions="Center"/>

                <Picker x:Name="decimalFormatPicker"
                        Grid.Column="1"
                        Title="Seleccionar formato"
                        SelectedIndex="0"
                        SelectedIndexChanged="OnDecimalFormatChanged">
                    <Picker.Items>
                        <x:String>Sin decimales</x:String>
                        <x:String>1 decimal</x:String>
                        <x:String>2 decimales</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

            <!-- Editor de texto -->
            <Editor x:Name="ocrTextEditor"
                    HeightRequest="200"
                    FontSize="16"
                    AutoSize="TextChanges"/>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Copiar Texto"
                        Clicked="OnCopyTextClicked"
                        WidthRequest="150"/>
                <Button Text="Volver"
                        Clicked="OnBackClicked"
                        WidthRequest="150"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>